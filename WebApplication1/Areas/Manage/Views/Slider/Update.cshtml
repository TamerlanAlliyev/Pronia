
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}
@model Slider

<form method="post">

    <div class="form-group mb-3">
        <label>Title</label>
        <input class="form-control w-50" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group mb-3">
        <label>Description</label>
        <input class="form-control w-50" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group mb-3">
        <label>Offer</label>
        <input class="form-control w-50" asp-for="Offer" />
        <span class="text-danger" asp-validation-for="Offer"></span>
    </div>
    <div class="form-group mb-3">
        <label>ButtonText</label>
        <input class="form-control w-50" asp-for="ButtonText" />
        <span class="text-danger" asp-validation-for="ButtonText"></span>
    </div>
    <div class="form-group mb-3">
        <label>ImgUrl</label>
        <input class="form-control w-50" asp-for="ImgUrl" />
        <span class="text-danger" asp-validation-for="ImgUrl"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>